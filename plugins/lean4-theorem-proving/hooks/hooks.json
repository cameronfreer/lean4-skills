{
  "description": "Lean4 bootstrap: set env vars for sorry analyzer and plugin paths.",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/bootstrap.sh startup",
            "timeout": 20
          }
        ]
      }
    ]
  }
}
